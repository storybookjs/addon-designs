{
  "name": "root",
  "version": "10.0.0",
  "private": true,
  "repository": "git@github.com:storybookjs/addon-designs.git",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm run build --workspaces --if-present",
    "build:example": "pnpm run build-storybook --workspace=examples && pnpm run build-storybook:tab --workspace=examples",
    "dev": "pnpm run dev --workspaces --if-present",
    "example": "pnpm run storybook --workspace=examples",
    "fmt": "prettier --write README.md CHANGELOG.md CONTRIBUTING.md package.json 'packages/**/*.{js,jsx,ts,tsx,md,mdx,json}'",
    "release": "pnpm run release --workspace=@storybook/addon-designs"
  },
  "devDependencies": {
    "@auto-it/released": "^11.3.0",
    "@storybook/addon-designs": "*",
    "@storybook/addon-docs": "^10.0.0-0",
    "@storybook/react-vite": "^10.0.0-0",
    "@types/react": "^18.2.65",
    "@types/react-dom": "^18.2.21",
    "auto": "^11.3.0",
    "figma-js": "^1.16.0",
    "prettier": "^3.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remark-gfm": "^4.0.0",
    "storybook": "^10.0.0-0",
    "tsup": "^8.0.2",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.11.1+sha512.e519b9f7639869dc8d5c3c5dfef73b3f091094b0a006d7317353c72b124e80e1afd429732e28705ad6bfa1ee879c1fce46c128ccebd3192101f43dd67c667912"
}
